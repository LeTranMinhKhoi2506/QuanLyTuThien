@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Từ Thiện</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TuThien.styles.css" asp-append-version="true" />

    <style>
        /* Minimal helper styles to resemble UNICEF-like hero/layout. Move to TuThien.styles.css */
        .hero {
            background: linear-gradient(120deg, #0b63b7 0%, #2b9bd3 60%);
            color: white;
            padding: 60px 0;
            border-radius: 6px;
            margin-bottom: 24px;
        }
        .hero h1 { font-weight:700; }
        .site-sidebar .card { border-radius:6px; }
        
        /* Add container spacing */
        body {
            background-color: #f8f9fa;
        }
        
        .main-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
            background-color: white;
        }
    </style>
</head>
<body>
    @await Html.PartialAsync("~/Views/Shared/Header.cshtml")
    
    <div class="main-container">
        @RenderBody()
    </div>
    
    @await Html.PartialAsync("~/Views/Shared/Footer.cshtml")

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
