@* Admin Modals - Toast Container và Confirm Modal *@

<!-- Toast Container -->
<div class="toast-container" id="toastContainer"></div>

<!-- Confirm Modal -->
<div class="confirm-modal-overlay" id="confirmModalOverlay">
    <div class="confirm-modal">
        <div class="confirm-modal-header">
            <div class="modal-icon warning" id="confirmModalIcon">
                <i class="bi bi-exclamation-triangle"></i>
            </div>
            <h5 class="modal-title" id="confirmModalTitle">Xác nhận</h5>
        </div>
        <div class="confirm-modal-body" id="confirmModalMessage">
            Bạn có chắc chắn muốn thực hiện hành động này?
        </div>
        <div class="confirm-modal-footer">
            <button type="button" class="btn btn-secondary" id="confirmModalCancel">Hủy</button>
            <button type="button" class="btn btn-primary" id="confirmModalConfirm">Xác nhận</button>
        </div>
    </div>
</div>
