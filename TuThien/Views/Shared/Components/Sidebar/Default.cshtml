@model IEnumerable<Category>

@if(Model != null && Model.Any())
{
    <li>
        <a asp-controller="Campaign" asp-action="Index" class="dropdown-item">
            <i class="bi bi-grid-3x3-gap me-2"></i>Tất cả
        </a>
    </li>
    <li><hr class="dropdown-divider"></li>
    @foreach (var cat in Model)
    {
        <li>
            <a asp-controller="Campaign" asp-action="Index" asp-route-categoryId="@cat.CategoryId" class="dropdown-item">
                <i class="bi bi-tag me-2"></i>@cat.Name
            </a>
        </li>
    }
}
else
{
    <li>
        <span class="dropdown-item text-muted">
            <i class="bi bi-inbox me-2"></i>Chưa có danh mục
        </span>
    </li>
}
