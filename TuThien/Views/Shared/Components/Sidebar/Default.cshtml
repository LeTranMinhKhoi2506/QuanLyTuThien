@model IEnumerable<Category>

@if(Model != null && Model.Any())
{
    <li>
        <a href="#" class="dropdown-item category-filter" data-category-id="">
            <i class="bi bi-grid-3x3-gap me-2"></i>Tất cả
        </a>
    </li>
    <li><hr class="dropdown-divider"></li>
    @foreach (var cat in Model)
    {
        <li>
            <a href="#" class="dropdown-item category-filter" data-category-id="@cat.CategoryId">
                <i class="bi bi-tag me-2"></i>@cat.Name
            </a>
        </li>
    }
}
else
{
    <li>
        <span class="dropdown-item text-muted">
            <i class="bi bi-inbox me-2"></i>Chưa có danh mục
        </span>
    </li>
}
