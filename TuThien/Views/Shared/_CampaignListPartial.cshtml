@model IEnumerable<TuThien.Models.Campaign>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-0 campaign-card hover-animate">
                <div class="position-relative">
                    <img src="@item.ThumbnailUrl" class="card-img-top" alt="@item.Title" style="height: 200px; object-fit: cover;">
                    @if(item.Category != null)
                    {
                        <span class="badge bg-primary position-absolute top-0 end-0 m-2">@item.Category.Name</span>
                    }
                </div>
                <div class="card-body">
                    <h5 class="card-title text-truncate" title="@item.Title">
                        <a asp-action="Details" asp-controller="Campaign" asp-route-id="@item.CampaignId" class="text-decoration-none text-dark">
                            @item.Title
                        </a>
                    </h5>
                    <p class="card-text text-muted small" style="height: 4.5em; overflow: hidden; display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical;">
                        @item.Description
                    </p>
                    
                    <div class="progress mb-2" style="height: 8px;">
                        @{
                            var currentAmount = item.CurrentAmount ?? 0;
                            var percentage = item.TargetAmount > 0 ? (currentAmount / item.TargetAmount) * 100 : 0;
                            var progressColor = percentage >= 100 ? "bg-success" : "bg-primary";
                        }
                        <div class="progress-bar @progressColor" role="progressbar" style="width: @Math.Min(percentage, 100)%"></div>
                    </div>
                    <div class="d-flex justify-content-between small fw-bold mb-3">
                        <span class="text-primary">@currentAmount.ToString("N0") đ</span>
                        <span class="text-muted">/ @item.TargetAmount.ToString("N0") đ</span>
                    </div>

                    <a asp-action="Details" asp-controller="Campaign" asp-route-id="@item.CampaignId" class="btn btn-outline-primary w-100 rounded-pill">
                        Quyên góp ngay
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="bi bi-inbox display-1 text-muted opacity-25"></i>
        <p class="mt-3 text-muted">Chưa có chiến dịch nào trong danh mục này.</p>
    </div>
}
