@model List<TuThien.Models.Notification>
@{
    ViewData["Title"] = "Thông báo của tôi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-1">
                        <i class="bi bi-bell me-2 text-primary"></i>Thông báo của tôi
                    </h2>
                    <p class="text-muted mb-0">Xem tất cả thông báo từ hệ thống</p>
                </div>
                <div>
                    @if (Model?.Any(n => n.IsRead != true) == true)
                    {
                        <button class="btn btn-outline-primary btn-sm" id="markAllReadBtn">
                            <i class="bi bi-check2-all me-1"></i>Đánh dấu tất cả đã đọc
                        </button>
                    }
                </div>
            </div>

            <!-- Notification Stats -->
            <div class="row g-3 mb-4">
                <div class="col-md-4">
                    <div class="card bg-primary bg-opacity-10 border-0">
                        <div class="card-body text-center py-3">
                            <h3 class="mb-0 text-primary">@Model?.Count</h3>
                            <small class="text-muted">Tổng thông báo</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-warning bg-opacity-10 border-0">
                        <div class="card-body text-center py-3">
                            <h3 class="mb-0 text-warning">@Model?.Count(n => n.IsRead != true)</h3>
                            <small class="text-muted">Chưa đọc</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-success bg-opacity-10 border-0">
                        <div class="card-body text-center py-3">
                            <h3 class="mb-0 text-success">@Model?.Count(n => n.IsRead == true)</h3>
                            <small class="text-muted">Đã đọc</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Notification List -->
            <div class="card shadow-sm">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-list-ul me-2"></i>Danh sách thông báo</span>
                    <div class="btn-group btn-group-sm" role="group">
                        <input type="radio" class="btn-check" name="filterStatus" id="filterAll" checked>
                        <label class="btn btn-outline-secondary" for="filterAll">Tất cả</label>
                        
                        <input type="radio" class="btn-check" name="filterStatus" id="filterUnread">
                        <label class="btn btn-outline-secondary" for="filterUnread">Chưa đọc</label>
                        
                        <input type="radio" class="btn-check" name="filterStatus" id="filterRead">
                        <label class="btn btn-outline-secondary" for="filterRead">Đã đọc</label>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (Model == null || !Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-bell-slash text-muted" style="font-size: 4rem;"></i>
                            <h5 class="mt-3 text-muted">Không có thông báo nào</h5>
                            <p class="text-muted">Các thông báo từ hệ thống sẽ hiển thị ở đây</p>
                        </div>
                    }
                    else
                    {
                        <div class="list-group list-group-flush" id="notificationListPage">
                            @foreach (var notification in Model)
                            {
                                var isUnread = notification.IsRead != true;
                                var bgClass = isUnread ? "bg-light" : "";
                                var iconClass = notification.Type switch
                                {
                                    "campaign_update" => "bi-megaphone text-success",
                                    "payment" => "bi-credit-card text-primary",
                                    "system" => "bi-gear text-secondary",
                                    _ => "bi-bell text-info"
                                };
                                
                                <div class="list-group-item list-group-item-action @bgClass notification-row" 
                                     data-id="@notification.NotificationId" 
                                     data-read="@(notification.IsRead == true ? "true" : "false")">
                                    <div class="d-flex align-items-start">
                                        <div class="notification-icon-page me-3">
                                            <i class="bi @iconClass fs-4"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <h6 class="mb-1 @(isUnread ? "fw-bold" : "")">
                                                    @notification.Title
                                                    @if (isUnread)
                                                    {
                                                        <span class="badge bg-primary ms-2" style="font-size: 10px;">Mới</span>
                                                    }
                                                </h6>
                                                <small class="text-muted">
                                                    @if (notification.CreatedAt.HasValue)
                                                    {
                                                        @notification.CreatedAt.Value.ToString("dd/MM/yyyy HH:mm")
                                                    }
                                                </small>
                                            </div>
                                            <p class="mb-1 text-muted">@notification.Message</p>
                                            <small class="text-muted">
                                                <i class="bi bi-tag me-1"></i>
                                                @switch (notification.Type)
                                                {
                                                    case "campaign_update":
                                                        <span>Cập nhật chiến dịch</span>
                                                        break;
                                                    case "payment":
                                                        <span>Thanh toán</span>
                                                        break;
                                                    case "system":
                                                        <span>Hệ thống</span>
                                                        break;
                                                    default:
                                                        <span>Thông báo</span>
                                                        break;
                                                }
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>

            <!-- Back Button -->
            <div class="mt-4 text-center">
                <a href="@Url.Action("Profile", "Account")" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i>Quay lại tài khoản
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Mark all as read
    document.getElementById('markAllReadBtn')?.addEventListener('click', async function() {
        try {
            const response = await fetch('@Url.Action("MarkAllNotificationsRead", "Account")', {
                method: 'POST'
            });
            const data = await response.json();
            if (data.success) {
                // Update UI
                document.querySelectorAll('.notification-row').forEach(row => {
                    row.classList.remove('bg-light');
                    row.dataset.read = 'true';
                    row.querySelector('.badge')?.remove();
                    row.querySelector('h6')?.classList.remove('fw-bold');
                });
                this.style.display = 'none';
                
                // Update stats
                location.reload();
            }
        } catch (error) {
            console.error('Error:', error);
        }
    });

    // Mark single notification as read on click
    document.querySelectorAll('.notification-row').forEach(row => {
        row.addEventListener('click', async function() {
            if (this.dataset.read === 'true') return;
            
            const id = this.dataset.id;
            try {
                await fetch('@Url.Action("MarkNotificationRead", "Account")', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: 'id=' + id
                });
                
                // Update UI
                this.classList.remove('bg-light');
                this.dataset.read = 'true';
                this.querySelector('.badge')?.remove();
                this.querySelector('h6')?.classList.remove('fw-bold');
            } catch (error) {
                console.error('Error:', error);
            }
        });
    });

    // Filter notifications
    document.querySelectorAll('input[name="filterStatus"]').forEach(radio => {
        radio.addEventListener('change', function() {
            const filter = this.id;
            document.querySelectorAll('.notification-row').forEach(row => {
                const isRead = row.dataset.read === 'true';
                
                if (filter === 'filterAll') {
                    row.style.display = '';
                } else if (filter === 'filterUnread') {
                    row.style.display = isRead ? 'none' : '';
                } else if (filter === 'filterRead') {
                    row.style.display = isRead ? '' : 'none';
                }
            });
        });
    });
</script>

<style>
    .notification-icon-page {
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f0f0f0;
        border-radius: 50%;
        flex-shrink: 0;
    }
    
    .notification-row {
        cursor: pointer;
        transition: all 0.2s ease;
    }
    
    .notification-row:hover {
        background-color: #f8f9fa !important;
    }
    
    .list-group-item-action:focus {
        background-color: #f8f9fa;
    }
</style>
}
