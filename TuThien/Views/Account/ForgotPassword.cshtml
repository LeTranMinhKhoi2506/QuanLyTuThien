@model TuThien.Models.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="auth-page">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="auth-card">
                    <div class="auth-header text-center">
                        <div class="auth-logo">
                            <i class="bi bi-shield-lock"></i>
                        </div>
                        <h2>Quên mật khẩu</h2>
                        <p class="text-muted">Nhập email để nhận mã xác nhận</p>
                    </div>

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-circle me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="auth-body">
                        <form asp-action="ForgotPassword" method="post">
                            @Html.AntiForgeryToken()
                            
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                            <div class="mb-4">
                                <label asp-for="Email" class="form-label">
                                    <i class="bi bi-envelope me-2"></i>Địa chỉ Email
                                </label>
                                <input asp-for="Email" class="form-control form-control-lg" 
                                       placeholder="Nhập email đã đăng ký" autofocus />
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    Mã xác nhận sẽ được gửi đến email này
                                </small>
                            </div>

                            <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                                <i class="bi bi-send me-2"></i>Gửi mã xác nhận
                            </button>

                            <div class="text-center">
                                <p class="text-muted mb-0">
                                    Đã nhớ mật khẩu? 
                                    <a href="@Url.Action("Login", "Account")" class="register-link">
                                        Đăng nhập ngay
                                    </a>
                                </p>
                            </div>
                        </form>
                    </div>

                    <div class="auth-footer text-center mt-4">
                        <p class="small text-muted">
                            <i class="bi bi-shield-check me-1"></i>
                            Thông tin của bạn được bảo mật tuyệt đối
                        </p>
                        <div class="alert alert-info mt-3" style="font-size: 12px;">
                            <strong>📧 Lưu ý:</strong> Để nhận được email, bạn cần cấu hình SMTP trong file appsettings.json. 
                            <a href="https://github.com/yourusername/yourrepo/blob/main/HUONG_DAN_CAU_HINH_EMAIL.md" target="_blank">
                                Xem hướng dẫn
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
