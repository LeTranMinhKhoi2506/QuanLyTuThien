@model List<TuThien.Models.AuditLog>
@{
    ViewData["Title"] = "Nhật ký hệ thống";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="alert alert-info mb-4">
    <i class="bi bi-info-circle me-2"></i>
    <strong>Nhật ký hệ thống (Audit Logs)</strong> ghi lại tất cả các hành động quan trọng trong hệ thống để đảm bảo minh bạch và chống gian lận nội bộ.
</div>

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-2">
                <label class="form-label">Hành động</label>
                <select name="action" class="form-select">
                    <option value="">Tất cả</option>
                    @if (ViewBag.Actions != null)
                    {
                        foreach (var action in (List<string>)ViewBag.Actions)
                        {
                            <option value="@action" selected="@(ViewBag.Action == action)">@action</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Bảng</label>
                <select name="tableName" class="form-select">
                    <option value="">Tất cả</option>
                    @if (ViewBag.Tables != null)
                    {
                        foreach (var table in (List<string>)ViewBag.Tables)
                        {
                            <option value="@table" selected="@(ViewBag.TableName == table)">@table</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">User ID</label>
                <input type="number" name="userId" class="form-control" value="@ViewBag.UserId" placeholder="ID người dùng" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Từ ngày</label>
                <input type="date" name="fromDate" class="form-control" value="@(((DateTime?)ViewBag.FromDate)?.ToString("yyyy-MM-dd"))" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Đến ngày</label>
                <input type="date" name="toDate" class="form-control" value="@(((DateTime?)ViewBag.ToDate)?.ToString("yyyy-MM-dd"))" />
            </div>
            <div class="col-md-2 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search me-1"></i>Lọc
                </button>
                <a href="@Url.Action("AuditLogs", "Admin")" class="btn btn-outline-secondary">
                    <i class="bi bi-x-lg"></i>
                </a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <i class="bi bi-journal-text me-2"></i>Nhật ký hệ thống
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-sm align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Thời gian</th>
                        <th>Người thực hiện</th>
                        <th>Hành động</th>
                        <th>Bảng</th>
                        <th>Record ID</th>
                        <th>IP Address</th>
                        <th>Chi tiết</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="8" class="text-center py-4 text-muted">
                                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                Không có nhật ký nào
                            </td>
                        </tr>
                    }
                    @foreach (var log in Model)
                    {
                        <tr>
                            <td><small class="text-muted">@log.LogId</small></td>
                            <td>
                                <small>@log.CreatedAt?.ToString("dd/MM/yyyy HH:mm:ss")</small>
                            </td>
                            <td>
                                @if (log.User != null)
                                {
                                    <span class="badge bg-primary">@log.User.Username</span>
                                }
                                else
                                {
                                    <span class="text-muted">System</span>
                                }
                            </td>
                            <td>
                                @{
                                    var actionBadge = log.Action switch
                                    {
                                        var a when a.Contains("APPROVE") => "bg-success",
                                        var a when a.Contains("REJECT") => "bg-danger",
                                        var a when a.Contains("DELETE") => "bg-danger",
                                        var a when a.Contains("UPDATE") => "bg-warning text-dark",
                                        var a when a.Contains("CREATE") => "bg-info",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @actionBadge">@log.Action</span>
                            </td>
                            <td><code>@log.TableName</code></td>
                            <td><code>@log.RecordId</code></td>
                            <td><small class="text-muted">@log.IpAddress</small></td>
                            <td>
                                @if (!string.IsNullOrEmpty(log.OldValue) || !string.IsNullOrEmpty(log.NewValue))
                                {
                                    <button class="btn btn-sm btn-outline-info" type="button" data-bs-toggle="modal" data-bs-target="#logModal@(log.LogId)">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                    
                                    <!-- Modal -->
                                    <div class="modal fade" id="logModal@(log.LogId)" tabindex="-1">
                                        <div class="modal-dialog modal-lg">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Chi tiết thay đổi - Log #@log.LogId</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <h6 class="text-danger">Giá trị cũ</h6>
                                                            <pre class="bg-light p-3 rounded" style="max-height: 300px; overflow: auto;">@(log.OldValue ?? "N/A")</pre>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <h6 class="text-success">Giá trị mới</h6>
                                                            <pre class="bg-light p-3 rounded" style="max-height: 300px; overflow: auto;">@(log.NewValue ?? "N/A")</pre>
                                                        </div>
                                                    </div>
                                                    <hr>
                                                    <dl class="row mb-0">
                                                        <dt class="col-sm-3">User Agent</dt>
                                                        <dd class="col-sm-9"><small class="text-muted">@log.UserAgent</small></dd>
                                                    </dl>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
    @if (ViewBag.TotalPages > 1)
    {
        <div class="card-footer">
            <nav>
                <ul class="pagination pagination-sm justify-content-center mb-0">
                    @for (int i = Math.Max(1, ViewBag.CurrentPage - 3); i <= Math.Min((int)ViewBag.TotalPages, ViewBag.CurrentPage + 3); i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" href="?page=@i&action=@ViewBag.Action&tableName=@ViewBag.TableName&userId=@ViewBag.UserId&fromDate=@(((DateTime?)ViewBag.FromDate)?.ToString("yyyy-MM-dd"))&toDate=@(((DateTime?)ViewBag.ToDate)?.ToString("yyyy-MM-dd"))">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    }
</div>
