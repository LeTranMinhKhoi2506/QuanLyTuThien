@model List<TuThien.Models.Donation>
@{
    ViewData["Title"] = "Lịch sử quyên góp";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="stat-card">
            <div class="d-flex align-items-center gap-3">
                <div class="stat-icon bg-success bg-opacity-10 text-success">
                    <i class="bi bi-cash-stack"></i>
                </div>
                <div>
                    <div class="stat-value">@(((decimal)ViewBag.TotalAmount).ToString("N0"))đ</div>
                    <div class="stat-label">Tổng tiền quyên góp</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="stat-card">
            <div class="d-flex align-items-center gap-3">
                <div class="stat-icon bg-primary bg-opacity-10 text-primary">
                    <i class="bi bi-receipt"></i>
                </div>
                <div>
                    <div class="stat-value">@ViewBag.TotalCount</div>
                    <div class="stat-label">Số lượt quyên góp</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="stat-card">
            <div class="d-flex align-items-center gap-3">
                <div class="stat-icon bg-warning bg-opacity-10 text-warning">
                    <i class="bi bi-check-circle"></i>
                </div>
                <div>
                    <div class="stat-value">@Model.Count(d => d.PaymentStatus == "success")</div>
                    <div class="stat-label">Giao dịch thành công</div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="bi bi-clock-history me-2"></i>Danh sách quyên góp</span>
    </div>
    <div class="card-body">
        <table id="donationsTable" class="table table-hover align-middle w-100">
            <thead class="table-light">
                <tr>
                    <th>Mã GD</th>
                    <th>Người quyên góp</th>
                    <th>Chiến dịch</th>
                    <th class="text-end">Số tiền</th>
                    <th>Phương thức</th>
                    <th>Trạng thái</th>
                    <th>Thời gian</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var donation in Model)
                {
                    <tr>
                        <td><code>@(donation.TransactionCode ?? "-")</code></td>
                        <td>
                            @if (donation.IsAnonymous == true)
                            {
                                <div>
                                    <span class="text-muted"><i class="bi bi-incognito me-1"></i>Ẩn danh</span>
                                    @if (donation.User != null)
                                    {
                                        <br/>
                                        <small class="text-info" title="Chỉ Admin thấy">
                                            <i class="bi bi-eye me-1"></i>@donation.User.Username
                                        </small>
                                    }
                                </div>
                            }
                            else
                            {
                                <span>@(donation.User?.Username ?? "N/A")</span>
                            }
                        </td>
                        <td>
                            <span class="text-truncate d-inline-block" style="max-width: 200px;" title="@donation.Campaign?.Title">
                                @donation.Campaign?.Title
                            </span>
                        </td>
                        <td class="text-end fw-semibold text-success" data-order="@donation.Amount">
                            @donation.Amount.ToString("N0")đ
                        </td>
                        <td>
                            @{
                                var methodBadge = donation.PaymentMethod switch
                                {
                                    "momo" => "bg-danger",
                                    "vnpay" => "bg-info",
                                    _ => "bg-primary"
                                };
                                var methodText = donation.PaymentMethod switch
                                {
                                    "momo" => "MoMo",
                                    "vnpay" => "VNPay",
                                    "bank_transfer" => "Chuyển khoản",
                                    _ => donation.PaymentMethod
                                };
                            }
                            <span class="badge @methodBadge">@methodText</span>
                        </td>
                        <td>
                            @{
                                var statusBadge = donation.PaymentStatus switch
                                {
                                    "success" => "bg-success",
                                    "pending" => "bg-warning text-dark",
                                    "failed" => "bg-danger",
                                    _ => "bg-secondary"
                                };
                                var statusText = donation.PaymentStatus switch
                                {
                                    "success" => "Thành công",
                                    "pending" => "Đang xử lý",
                                    "failed" => "Thất bại",
                                    _ => donation.PaymentStatus
                                };
                            }
                            <span class="badge @statusBadge">@statusText</span>
                        </td>
                        <td data-order="@donation.DonatedAt?.ToString("yyyy-MM-dd HH:mm:ss")">
                            <small>@donation.DonatedAt?.ToString("dd/MM/yyyy HH:mm")</small>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#donationsTable').DataTable({
                order: [[6, 'desc']], // Sort by date descending
                columnDefs: [
                    { targets: [3], className: 'text-end' }, // Amount column
                    { targets: [4, 5], orderable: true },
                ],
                dom: "<'row mb-3'<'col-sm-12 col-md-4'l><'col-sm-12 col-md-4 text-center'B><'col-sm-12 col-md-4'f>>" +
                     "<'row'<'col-sm-12'tr>>" +
                     "<'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7'p>>",
                buttons: [
                    {
                        extend: 'excel',
                        text: '<i class="bi bi-file-earmark-excel me-1"></i> Excel',
                        className: 'btn btn-success btn-sm',
                        title: 'Danh sách quyên góp',
                        exportOptions: {
                            columns: ':visible'
                        }
                    },
                    {
                        extend: 'pdf',
                        text: '<i class="bi bi-file-earmark-pdf me-1"></i> PDF',
                        className: 'btn btn-danger btn-sm',
                        title: 'Danh sách quyên góp',
                        exportOptions: {
                            columns: ':visible'
                        }
                    },
                    {
                        extend: 'print',
                        text: '<i class="bi bi-printer me-1"></i> In',
                        className: 'btn btn-secondary btn-sm',
                        title: 'Danh sách quyên góp'
                    }
                ]
            });
        });
    </script>
}
