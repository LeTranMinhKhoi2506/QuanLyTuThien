@model TuThien.ViewModels.Admin.AdminDashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row g-4 mb-4">
    <!-- Stat Cards -->
    <div class="col-md-3">
        <div class="stat-card">
            <div class="d-flex align-items-center gap-3">
                <div class="stat-icon bg-primary bg-opacity-10 text-primary">
                    <i class="bi bi-people"></i>
                </div>
                <div>
                    <div class="stat-value">@Model.TotalUsers.ToString("N0")</div>
                    <div class="stat-label">Người dùng</div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="stat-card">
            <div class="d-flex align-items-center gap-3">
                <div class="stat-icon bg-success bg-opacity-10 text-success">
                    <i class="bi bi-megaphone"></i>
                </div>
                <div>
                    <div class="stat-value">@Model.TotalCampaigns.ToString("N0")</div>
                    <div class="stat-label">Chiến dịch (@Model.ActiveCampaigns hoạt động, @Model.PendingCampaigns chờ duyệt)</div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="stat-card">
            <div class="d-flex align-items-center gap-3">
                <div class="stat-icon bg-info bg-opacity-10 text-info">
                    <i class="bi bi-cash-coin"></i>
                </div>
                <div>
                    <div class="stat-value">@Model.TotalDonations.ToString("N0")đ</div>
                    <div class="stat-label">Tổng quyên góp thành công (@Model.TotalDonationCount lượt)</div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="stat-card">
            <div class="d-flex align-items-center gap-3">
                <div class="stat-icon bg-warning bg-opacity-10 text-warning">
                    <i class="bi bi-exclamation-circle"></i>
                </div>
                <div>
                    <div class="stat-value">@Model.PendingDisbursements</div>
                    <div class="stat-label">Yêu cầu giải ngân chờ duyệt</div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Top Campaigns -->
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="bi bi-trophy me-2"></i>Top 5 Chiến dịch quyên góp nhiều nhất</span>
                <a href="@Url.Action("Campaigns", "Admin")" class="btn btn-sm btn-outline-primary">Xem tất cả</a>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Chiến dịch</th>
                            <th class="text-end">Đã nhận</th>
                            <th class="text-end">Mục tiêu</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var campaign in Model.TopCampaigns)
                        {
                            var progress = campaign.TargetAmount > 0 ? (campaign.CurrentAmount ?? 0) / campaign.TargetAmount * 100 : 0;
                            <tr>
                                <td>
                                    <div class="fw-semibold">@campaign.Title</div>
                                    <small class="text-muted">@campaign.Creator?.Username</small>
                                </td>
                                <td class="text-end">
                                    <div class="fw-semibold text-success">@((campaign.CurrentAmount ?? 0).ToString("N0"))đ</div>
                                    <div class="progress" style="height: 4px; width: 80px; margin-left: auto;">
                                        <div class="progress-bar bg-success" style="width: @progress%"></div>
                                    </div>
                                </td>
                                <td class="text-end">@campaign.TargetAmount.ToString("N0")đ</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <!-- Recent Donations -->
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="bi bi-clock-history me-2"></i>Quyên góp gần đây</span>
                <a href="@Url.Action("Donations", "Admin")" class="btn btn-sm btn-outline-primary">Xem tất cả</a>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Người quyên góp</th>
                            <th>Chiến dịch</th>
                            <th class="text-end">Số tiền</th>
                            <th>Thời gian</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var donation in Model.RecentDonations)
                        {
                            <tr>
                                <td>
                                    @if (donation.IsAnonymous == true)
                                    {
                                        <span class="text-muted"><i class="bi bi-incognito me-1"></i>Ẩn danh</span>
                                    }
                                    else
                                    {
                                        <span>@(donation.User?.Username ?? "N/A")</span>
                                    }
                                </td>
                                <td>
                                    <span class="text-truncate d-inline-block" style="max-width: 150px;" title="@donation.Campaign?.Title">
                                        @donation.Campaign?.Title
                                    </span>
                                </td>
                                <td class="text-end fw-semibold text-success">@donation.Amount.ToString("N0")đ</td>
                                <td>
                                    <small class="text-muted">@donation.DonatedAt?.ToString("dd/MM HH:mm")</small>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mt-2">
    <!-- Monthly Chart -->
    <div class="col-md-8">
        <div class="card h-100">
            <div class="card-header">
                <i class="bi bi-bar-chart me-2"></i>Thống kê quyên góp theo tháng (@Model.ChartYear)
            </div>
            <div class="card-body">
                <canvas id="monthlyChart" height="120"></canvas>
            </div>
        </div>
    </div>
    
    <!-- Campaign Status Chart -->
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-header">
                <i class="bi bi-pie-chart me-2"></i>Trạng thái chiến dịch
            </div>
            <div class="card-body d-flex align-items-center justify-content-center">
                <canvas id="campaignStatusChart"></canvas>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mt-2">
    <!-- Category Donation Chart -->
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header">
                <i class="bi bi-graph-up me-2"></i>Quyên góp theo danh mục
            </div>
            <div class="card-body">
                <canvas id="categoryDonationChart" height="200"></canvas>
            </div>
        </div>
    </div>
    
    <!-- Category Campaign Count Chart -->
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header">
                <i class="bi bi-diagram-3 me-2"></i>Số chiến dịch theo danh mục
            </div>
            <div class="card-body">
                <canvas id="categoryCampaignChart" height="200"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row g-4 mt-2">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-lightning me-2"></i>Hành động nhanh
            </div>
            <div class="card-body">
                <div class="d-flex gap-3 flex-wrap">
                    <a href="@Url.Action("Disbursements", "Admin", new { status = "pending" })" class="btn btn-warning">
                        <i class="bi bi-wallet2 me-2"></i>Duyệt giải ngân (@Model.PendingDisbursements)
                    </a>
                    <a href="@Url.Action("Reports", "Admin", new { status = "pending" })" class="btn btn-danger">
                        <i class="bi bi-flag me-2"></i>Xử lý báo cáo (@Model.PendingReports)
                    </a>
                    <a href="@Url.Action("Campaigns", "Admin", new { status = "pending" })" class="btn btn-info">
                        <i class="bi bi-megaphone me-2"></i>Duyệt chiến dịch
                    </a>
                    <a href="@Url.Action("SendNotification", "Admin")" class="btn btn-primary">
                        <i class="bi bi-bell me-2"></i>Gửi thông báo
                    </a>
                    <a href="@Url.Action("ExportReport", "Admin")" class="btn btn-success">
                        <i class="bi bi-file-earmark-spreadsheet me-2"></i>Xuất báo cáo
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    var jsonOptions = new System.Text.Json.JsonSerializerOptions { PropertyNamingPolicy = System.Text.Json.JsonNamingPolicy.CamelCase };
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Màu sắc cho biểu đồ
        const chartColors = [
            'rgba(13, 110, 253, 0.8)',   // primary
            'rgba(25, 135, 84, 0.8)',    // success
            'rgba(220, 53, 69, 0.8)',    // danger
            'rgba(255, 193, 7, 0.8)',    // warning
            'rgba(13, 202, 240, 0.8)',   // info
            'rgba(111, 66, 193, 0.8)',   // purple
            'rgba(253, 126, 20, 0.8)',   // orange
            'rgba(102, 16, 242, 0.8)'    // indigo
        ];

        const statusColors = {
            'draft': 'rgba(108, 117, 125, 0.8)',       // secondary
            'pending_approval': 'rgba(255, 193, 7, 0.8)', // warning
            'active': 'rgba(25, 135, 84, 0.8)',       // success
            'paused': 'rgba(13, 202, 240, 0.8)',      // info
            'completed': 'rgba(13, 110, 253, 0.8)',   // primary
            'rejected': 'rgba(220, 53, 69, 0.8)',     // danger
            'locked': 'rgba(33, 37, 41, 0.8)'         // dark
        };

        // ===== 1. Biểu đồ quyên góp theo tháng =====
        const monthlyData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.MonthlyDonations, jsonOptions));
        const months = ['T1', 'T2', 'T3', 'T4', 'T5', 'T6', 'T7', 'T8', 'T9', 'T10', 'T11', 'T12'];
        
        const chartData = months.map((_, index) => {
            const data = monthlyData.find(d => d.month === index + 1);
            return data ? data.amount : 0;
        });
        
        const countData = months.map((_, index) => {
            const data = monthlyData.find(d => d.month === index + 1);
            return data ? data.count : 0;
        });
        
        new Chart(document.getElementById('monthlyChart'), {
            type: 'bar',
            data: {
                labels: months,
                datasets: [{
                    label: 'Số tiền quyên góp (VNĐ)',
                    data: chartData,
                    backgroundColor: 'rgba(13, 110, 253, 0.7)',
                    borderRadius: 6,
                    yAxisID: 'y'
                }, {
                    label: 'Số lượt quyên góp',
                    data: countData,
                    type: 'line',
                    borderColor: 'rgba(25, 135, 84, 1)',
                    backgroundColor: 'rgba(25, 135, 84, 0.1)',
                    tension: 0.3,
                    yAxisID: 'y1'
                }]
            },
            options: {
                responsive: true,
                interaction: {
                    mode: 'index',
                    intersect: false,
                },
                scales: {
                    y: {
                        type: 'linear',
                        display: true,
                        position: 'left',
                        ticks: {
                            callback: function(value) {
                                return new Intl.NumberFormat('vi-VN').format(value) + 'đ';
                            }
                        }
                    },
                    y1: {
                        type: 'linear',
                        display: true,
                        position: 'right',
                        grid: {
                            drawOnChartArea: false,
                        },
                        ticks: {
                            callback: function(value) {
                                return value + ' lượt';
                            }
                        }
                    }
                },
                plugins: {
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                if (context.datasetIndex === 0) {
                                    return new Intl.NumberFormat('vi-VN').format(context.raw) + ' VNĐ';
                                }
                                return context.raw + ' lượt';
                            }
                        }
                    }
                }
            }
        });

        // ===== 2. Biểu đồ trạng thái chiến dịch (Pie) =====
        const campaignStatusData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.CampaignStatusStatistics, jsonOptions));
        
        new Chart(document.getElementById('campaignStatusChart'), {
            type: 'doughnut',
            data: {
                labels: campaignStatusData.map(s => s.statusDisplay),
                datasets: [{
                    data: campaignStatusData.map(s => s.count),
                    backgroundColor: campaignStatusData.map(s => statusColors[s.status] || chartColors[0]),
                    borderWidth: 2,
                    borderColor: '#fff'
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            usePointStyle: true,
                            padding: 15
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                const percentage = ((context.raw / total) * 100).toFixed(1);
                                return `${context.label}: ${context.raw} (${percentage}%)`;
                            }
                        }
                    }
                }
            }
        });

        // ===== 3. Biểu đồ quyên góp theo danh mục (Bar) =====
        const categoryData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.CategoryStatistics, jsonOptions));
        
        new Chart(document.getElementById('categoryDonationChart'), {
            type: 'bar',
            data: {
                labels: categoryData.map(c => c.categoryName),
                datasets: [{
                    label: 'Tổng quyên góp (VNĐ)',
                    data: categoryData.map(c => c.totalDonations),
                    backgroundColor: chartColors,
                    borderRadius: 6
                }]
            },
            options: {
                indexAxis: 'y',
                responsive: true,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return new Intl.NumberFormat('vi-VN').format(context.raw) + ' VNĐ';
                            }
                        }
                    }
                },
                scales: {
                    x: {
                        ticks: {
                            callback: function(value) {
                                if (value >= 1000000) {
                                    return (value / 1000000).toFixed(0) + 'M';
                                }
                                return new Intl.NumberFormat('vi-VN').format(value);
                            }
                        }
                    }
                }
            }
        });

        // ===== 4. Biểu đồ số chiến dịch theo danh mục (Polar Area) =====
        new Chart(document.getElementById('categoryCampaignChart'), {
            type: 'polarArea',
            data: {
                labels: categoryData.map(c => c.categoryName),
                datasets: [{
                    data: categoryData.map(c => c.campaignCount),
                    backgroundColor: chartColors.map(c => c.replace('0.8', '0.6')),
                    borderColor: chartColors,
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            usePointStyle: true,
                            padding: 15
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                const cat = categoryData[context.dataIndex];
                                return [
                                    `Số chiến dịch: ${cat.campaignCount}`,
                                    `Lượt quyên góp: ${cat.donationCount}`
                                ];
                            }
                        }
                    }
                }
            }
        });
    </script>
}
