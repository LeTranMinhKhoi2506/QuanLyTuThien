@model List<TuThien.Models.Campaign>
@{
    ViewData["Title"] = "Chiến dịch của tôi";
}

<div class="container py-5">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-3 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center py-4">
                    <div class="avatar-lg bg-primary bg-opacity-10 text-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px; font-size: 2rem;">
                        @Context.Session.GetString("Username")?[0].ToString().ToUpper()
                    </div>
                    <h5 class="mb-1">@Context.Session.GetString("Username")</h5>
                    <p class="text-muted small mb-0">@Context.Session.GetString("Email")</p>
                </div>
                <div class="list-group list-group-flush">
                    <a href="@Url.Action("Profile", "Account")" class="list-group-item list-group-item-action">
                        <i class="bi bi-person me-2"></i>Tài khoản của tôi
                    </a>
                    <a href="/my-campaigns" class="list-group-item list-group-item-action active">
                        <i class="bi bi-heart me-2"></i>Chiến dịch của tôi
                    </a>
                    <a href="/my-donations" class="list-group-item list-group-item-action">
                        <i class="bi bi-gift me-2"></i>Quyên góp của tôi
                    </a>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9">
            <!-- Stats -->
            <div class="row g-3 mb-4">
                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm text-center py-3">
                        <div class="display-6 text-primary fw-bold">@ViewBag.TotalCampaigns</div>
                        <small class="text-muted">Tổng chiến dịch</small>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm text-center py-3">
                        <div class="display-6 text-success fw-bold">@ViewBag.ActiveCampaigns</div>
                        <small class="text-muted">Đang hoạt động</small>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm text-center py-3">
                        <div class="display-6 text-info fw-bold">@(((decimal)ViewBag.TotalRaised / 1000000).ToString("N1"))M</div>
                        <small class="text-muted">Đã quyên góp</small>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="card border-0 shadow-sm text-center py-3">
                        <div class="display-6 text-warning fw-bold">@ViewBag.TotalDonations</div>
                        <small class="text-muted">Lượt quyên góp</small>
                    </div>
                </div>
            </div>

            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="mb-0">
                    <i class="bi bi-heart-fill text-danger me-2"></i>Chiến dịch của tôi
                </h4>
                <a href="@Url.Action("Create", "Campaign")" class="btn btn-primary">
                    <i class="bi bi-plus-lg me-1"></i>Tạo chiến dịch mới
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (Model.Count == 0)
            {
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-folder-x display-1 text-muted mb-3"></i>
                        <h5>Bạn chưa có chiến dịch nào</h5>
                        <p class="text-muted mb-4">Hãy tạo chiến dịch đầu tiên để kêu gọi quyên góp từ cộng đồng!</p>
                        <a href="@Url.Action("Create", "Campaign")" class="btn btn-primary">
                            <i class="bi bi-plus-lg me-1"></i>Tạo chiến dịch ngay
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="row g-4">
                    @foreach (var campaign in Model)
                    {
                        var progress = campaign.TargetAmount > 0 ? (campaign.CurrentAmount ?? 0) / campaign.TargetAmount * 100 : 0;
                        var statusBadge = campaign.Status switch
                        {
                            "pending_approval" => "bg-warning text-dark",
                            "active" => "bg-success",
                            "rejected" => "bg-danger",
                            "completed" => "bg-secondary",
                            "paused" => "bg-info",
                            "draft" => "bg-light text-dark",
                            _ => "bg-secondary"
                        };
                        var statusText = campaign.Status switch
                        {
                            "pending_approval" => "Chờ duyệt",
                            "active" => "Đang hoạt động",
                            "rejected" => "Bị từ chối",
                            "completed" => "Đã hoàn thành",
                            "paused" => "Tạm dừng",
                            "draft" => "Nháp",
                            _ => campaign.Status
                        };
                        
                        <div class="col-md-6">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="position-relative">
                                    @if (!string.IsNullOrEmpty(campaign.ThumbnailUrl))
                                    {
                                        <img src="@campaign.ThumbnailUrl" class="card-img-top" alt="@campaign.Title" style="height: 180px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="bg-light d-flex align-items-center justify-content-center" style="height: 180px;">
                                            <i class="bi bi-image display-4 text-muted"></i>
                                        </div>
                                    }
                                    <span class="badge @statusBadge position-absolute top-0 end-0 m-2">
                                        @statusText
                                    </span>
                                </div>
                                <div class="card-body">
                                    <h6 class="card-title mb-2">
                                        <a href="@Url.Action("MyDetails", "Campaign", new { id = campaign.CampaignId })" class="text-decoration-none text-dark stretched-link">
                                            @campaign.Title
                                        </a>
                                    </h6>
                                    <p class="small text-muted mb-3">
                                        <i class="bi bi-folder me-1"></i>@(campaign.Category?.Name ?? "Chưa phân loại")
                                        <span class="mx-2">•</span>
                                        <i class="bi bi-calendar me-1"></i>@campaign.CreatedAt?.ToString("dd/MM/yyyy")
                                    </p>
                                    
                                    <!-- Progress -->
                                    <div class="mb-3">
                                        <div class="d-flex justify-content-between small mb-1">
                                            <span class="text-success fw-semibold">@((campaign.CurrentAmount ?? 0).ToString("N0"))đ</span>
                                            <span class="text-muted">/ @campaign.TargetAmount.ToString("N0")đ</span>
                                        </div>
                                        <div class="progress" style="height: 6px;">
                                            <div class="progress-bar bg-success" style="width: @Math.Min(progress, 100)%"></div>
                                        </div>
                                        <div class="d-flex justify-content-between small mt-1">
                                            <span class="text-muted">@progress.ToString("N0")%</span>
                                            <span class="text-muted">@(campaign.Donations?.Count ?? 0) lượt quyên góp</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer bg-white border-0 pt-0">
                                    <div class="d-flex gap-2 position-relative" style="z-index: 2;">
                                        <a href="@Url.Action("MyDetails", "Campaign", new { id = campaign.CampaignId })" class="btn btn-outline-primary btn-sm flex-fill">
                                            <i class="bi bi-eye me-1"></i>Xem
                                        </a>
                                        @if (campaign.Status == "active" || campaign.Status == "draft")
                                        {
                                            <a href="@Url.Action("Edit", "Campaign", new { id = campaign.CampaignId })" class="btn btn-outline-secondary btn-sm flex-fill">
                                                <i class="bi bi-pencil me-1"></i>Sửa
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<style>
    .avatar-lg {
        font-weight: 600;
    }
    .list-group-item.active {
        background-color: var(--bs-primary);
        border-color: var(--bs-primary);
    }
    .card .stretched-link ~ .card-footer .btn {
        position: relative;
        z-index: 2;
    }
</style>
