@model TuThien.Models.MyCampaignsViewModel
@{
    ViewData["Title"] = "Chiến dịch của tôi";
    Layout = "~/Views/Shared/_CampaignLayout.cshtml";
}

@functions {
    string GetStatusBadge(string status)
    {
        return status switch
        {
            "pending_approval" => "<span class='badge bg-warning text-dark'>Chờ xét duyệt</span>",
            "approved" or "active" => "<span class='badge bg-success'>Đang quyên góp</span>",
            "rejected" => "<span class='badge bg-danger'>Bị từ chối</span>",
            "completed" => "<span class='badge bg-secondary'>Đã kết thúc</span>",
            "draft" => "<span class='badge bg-info'>Nháp</span>",
            _ => $"<span class='badge bg-light text-dark'>{status}</span>"
        };
    }
}

<div class="container py-5">
    <h1 class="mb-4 fw-bold">Chiến dịch của tôi</h1>
    <p class="text-muted mb-4">Quản lý các chiến dịch mà bạn là người đại diện.</p>

    @if (!Model.OwnedCampaigns.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-box2 display-1 text-muted opacity-25"></i>
            <p class="mt-3 text-muted">Bạn chưa tạo chiến dịch nào với vai trò người đại diện.</p>
            <a asp-action="Create" asp-controller="Campaign" class="btn btn-success mt-2">Tạo chiến dịch mới</a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in Model.OwnedCampaigns)
            {
                    <div class="col">
                    <div class="card h-100 shadow-sm border-0 campaign-card">
                        <div class="position-relative">
                            <img src="@item.ThumbnailUrl" class="card-img-top" alt="@item.Title" style="height: 200px; object-fit: cover;">
                            <div class="position-absolute top-0 end-0 m-2">
                                    @Html.Raw(GetStatusBadge(item.Status))
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title text-truncate" title="@item.Title">
                                <a asp-action="Details" asp-controller="Campaign" asp-route-id="@item.CampaignId" class="text-decoration-none text-dark">
                                    @item.Title
                                </a>
                            </h5>
                            
                            <div class="progress mb-2" style="height: 8px;">
                                @{
                                    var currentAmount = item.CurrentAmount ?? 0;
                                    var percentage = item.TargetAmount > 0 ? (currentAmount / item.TargetAmount) * 100 : 0;
                                    var progressColor = percentage >= 100 ? "bg-success" : "bg-primary";
                                }
                                <div class="progress-bar @progressColor" role="progressbar" style="width: @Math.Min(percentage, 100)%"></div>
                            </div>
                            <div class="d-flex justify-content-between small text-muted mb-3">
                                <span>Đạt: @percentage.ToString("0.0")%</span>
                                <span>Mục tiêu: @item.TargetAmount.ToString("N0") đ</span>
                            </div>

                            <div class="d-flex gap-2">
                                <a asp-action="Details" asp-controller="Campaign" asp-route-id="@item.CampaignId" class="btn btn-outline-primary flex-grow-1 rounded-pill">
                                    Xem
                                </a>
                                @if (new[] { "draft", "pending_approval", "rejected" }.Contains(item.Status))
                                {
                                    <form asp-action="Delete" asp-controller="Campaign" asp-route-id="@item.CampaignId" method="post" onsubmit="return confirm('Bạn có chắc chắn muốn xóa chiến dịch này không? Hành động này không thể hoàn tác.');">
                                        <button type="submit" class="btn btn-outline-danger rounded-pill" title="Xóa">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="d-flex justify-content-center mt-5 pb-4">
            <a asp-action="Create" asp-controller="Campaign" class="btn btn-success btn-lg rounded-pill px-5 shadow-sm hover-elevate">
                <i class="bi bi-plus-circle-fill me-2"></i>Tạo chiến dịch mới
            </a>
        </div>
    }
</div>
