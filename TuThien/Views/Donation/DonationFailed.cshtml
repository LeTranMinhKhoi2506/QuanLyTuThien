@model TuThien.Models.Donation

@{
    ViewData["Title"] = "Quyên góp thất bại";
    Layout = "_Layout";
    var errorMessage = ViewBag.ErrorMessage as string ?? "Thanh toán không thành công";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center p-5">
                    <!-- Error Icon -->
                    <div class="mb-4">
                        <div class="error-icon">
                            <i class="bi bi-x-circle-fill text-danger" style="font-size: 5rem;"></i>
                        </div>
                    </div>

                    <h2 class="text-danger mb-3">Thanh toán thất bại</h2>
                    
                    <p class="lead text-muted mb-4">
                        @errorMessage
                    </p>

                    @if (Model != null)
                    {
                        <div class="bg-light rounded p-4 mb-4">
                            <h5 class="text-primary mb-3">@Model.Campaign?.Title</h5>
                            
                            <div class="row text-start">
                                <div class="col-6">
                                    <p class="text-muted mb-1">Số tiền:</p>
                                    <h4 class="text-secondary">@Model.Amount.ToString("N0") ₫</h4>
                                </div>
                                <div class="col-6">
                                    <p class="text-muted mb-1">Mã giao dịch:</p>
                                    <p class="fw-bold text-secondary">@Model.TransactionCode</p>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="alert alert-warning small mb-4">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Số tiền chưa bị trừ. Nếu bạn đã bị trừ tiền, vui lòng liên hệ hỗ trợ.
                    </div>

                    <div class="d-grid gap-2">
                        @if (Model?.CampaignId != null)
                        {
                            <a href="/donate/@Model.CampaignId" class="btn btn-primary btn-lg">
                                <i class="bi bi-arrow-clockwise me-2"></i>Thử lại
                            </a>
                        }
                        else
                        {
                            <a href="/donate" class="btn btn-primary btn-lg">
                                <i class="bi bi-arrow-clockwise me-2"></i>Thử lại
                            </a>
                        }
                        <a href="/" class="btn btn-outline-secondary">
                            <i class="bi bi-house me-2"></i>Về trang chủ
                        </a>
                    </div>
                </div>
            </div>

            <!-- Support Section -->
            <div class="card mt-4 border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="mb-3"><i class="bi bi-headset me-2"></i>Cần hỗ trợ?</h6>
                    <p class="small text-muted mb-2">
                        Nếu bạn gặp vấn đề khi thanh toán, vui lòng liên hệ:
                    </p>
                    <ul class="small text-muted mb-0">
                        <li>Email: support@tuthien.vn</li>
                        <li>Hotline: 1900-xxxx</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .error-icon {
        animation: shake 0.5s ease-in-out;
    }
    
    @@keyframes shake {
        0%, 100% { transform: translateX(0); }
        10%, 30%, 50%, 70%, 90% { transform: translateX(-5px); }
        20%, 40%, 60%, 80% { transform: translateX(5px); }
    }
</style>
