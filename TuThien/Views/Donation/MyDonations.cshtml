@model TuThien.Models.MyDonationsViewModel
@{
    ViewData["Title"] = "Quyên góp của tôi";
    Layout = "~/Views/Shared/_CampaignLayout.cshtml";
}

<div class="container py-5">
    <h1 class="mb-4 fw-bold">Quyên góp của tôi</h1>

    <ul class="nav nav-tabs mb-4" id="myDonationTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="contributed-tab" data-bs-toggle="tab" data-bs-target="#contributed" type="button" role="tab" aria-controls="contributed" aria-selected="true">
                Chiến dịch đã đóng góp
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="history-tab" data-bs-toggle="tab" data-bs-target="#history" type="button" role="tab" aria-controls="history" aria-selected="false">
                Lịch sử giao dịch
            </button>
        </li>
    </ul>

    <div class="tab-content" id="myDonationTabsContent">
        <!-- Tab 1: Contributed Campaigns -->
        <div class="tab-pane fade show active" id="contributed" role="tabpanel" aria-labelledby="contributed-tab">
            @if (!Model.ContributedCampaigns.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-heart display-1 text-muted opacity-25"></i>
                    <p class="mt-3 text-muted">Bạn chưa quyên góp vào chiến dịch nào.</p>
                    <a asp-action="Index" asp-controller="Campaign" class="btn btn-primary mt-2">Khám phá ngay</a>
                </div>
            }
            else
            {
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    @foreach (var item in Model.ContributedCampaigns)
                    {
                        <div class="col">
                            <div class="card h-100 shadow-sm border-0 campaign-card">
                                <div class="position-relative">
                                    <img src="@item.Campaign.ThumbnailUrl" class="card-img-top" alt="@item.Campaign.Title" style="height: 200px; object-fit: cover;">
                                    @if(item.Campaign.Category != null)
                                    {
                                        <span class="badge bg-primary position-absolute top-0 end-0 m-2">@item.Campaign.Category.Name</span>
                                    }
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title text-truncate" title="@item.Campaign.Title">
                                        <a asp-action="Details" asp-controller="Campaign" asp-route-id="@item.Campaign.CampaignId" class="text-decoration-none text-dark">
                                            @item.Campaign.Title
                                        </a>
                                    </h5>
                                    
                                    <div class="alert alert-info py-2 mb-3">
                                        <small class="fw-bold d-block">Bạn đã đóng góp:</small>
                                        <span class="fs-5 fw-bold text-primary">@item.TotalDonated.ToString("N0") đ</span>
                                    </div>

                                    <div class="progress mb-2" style="height: 8px;">
                                        @{
                                            var currentAmount = item.Campaign.CurrentAmount ?? 0;
                                            var targetAmount = item.Campaign.TargetAmount;
                                            var percentage = targetAmount > 0 ? (currentAmount / targetAmount) * 100 : 0;
                                            var progressColor = percentage >= 100 ? "bg-success" : "bg-primary";
                                        }
                                        <div class="progress-bar @progressColor" role="progressbar" style="width: @Math.Min(percentage, 100)%"></div>
                                    </div>
                                    <div class="d-flex justify-content-between small text-muted mb-3">
                                        <span>Đạt: @percentage.ToString("0.0")%</span>
                                        <span>Mục tiêu: @targetAmount.ToString("N0") đ</span>
                                    </div>

                                    <a asp-action="Details" asp-controller="Campaign" asp-route-id="@item.Campaign.CampaignId" class="btn btn-outline-primary w-100 rounded-pill">
                                        Xem chi tiết
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>

        <!-- Tab 2: Transaction History -->
        <div class="tab-pane fade" id="history" role="tabpanel" aria-labelledby="history-tab">
             @if (!Model.DonationHistory.Any())
            {
                <div class="text-center py-5">
                    <p class="text-muted">Chưa có giao dịch nào.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Ngày</th>
                                <th>Chiến dịch</th>
                                <th>Số tiền</th>
                                <th>Phương thức</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var donation in Model.DonationHistory)
                            {
                                <tr>
                                    <td>@donation.DonatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <a asp-controller="Campaign" asp-action="Details" asp-route-id="@donation.CampaignId" class="text-decoration-none fw-semibold">
                                            @donation.Campaign?.Title
                                        </a>
                                    </td>
                                    <td class="fw-bold text-primary">@donation.Amount.ToString("N0") đ</td>
                                    <td>
                                        @switch(donation.PaymentMethod)
                                        {
                                            case "momo": <span class="badge bg-pink text-white" style="background-color: #d82d8b;">MoMo</span>; break;
                                            case "vnpay": <span class="badge bg-primary">VNPay</span>; break;
                                            case "bank_transfer": <span class="badge bg-secondary">Chuyển khoản</span>; break;
                                            default: <span class="badge bg-light text-dark">@donation.PaymentMethod</span>; break;
                                        }
                                    </td>
                                    <td>
                                        @switch(donation.PaymentStatus)
                                        {
                                            case "success": 
                                            case "completed":
                                                <span class="badge bg-success">Thành công</span>; 
                                                break;
                                            case "pending": 
                                                <span class="badge bg-warning text-dark">Chờ xử lý</span>; 
                                                break;
                                            case "failed": 
                                            case "cancelled":
                                                <span class="badge bg-danger">Thất bại</span>; 
                                                break;
                                            default: 
                                                <span class="badge bg-light text-dark">@donation.PaymentStatus</span>; 
                                                break;
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Simple Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Page navigation" class="mt-4">
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("MyDonations", new { page = i })">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
        </div>
    </div>
</div>
